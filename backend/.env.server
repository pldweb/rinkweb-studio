# Environment Configuration for Production Server
# Copy this to .env and adjust values according to your server setup

APP_NAME="RinkWeb Admin"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://admin.rinkwebstudio.com

# Database Configuration - MySQL
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=rinkweb_admin
DB_USERNAME=rinkweb_user
DB_PASSWORD=your_secure_password_here

# Broadcasting
BROADCAST_DRIVER=log

# Cache Configuration
CACHE_DRIVER=file
FILESYSTEM_DISK=local

# Queue Configuration
QUEUE_CONNECTION=database

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.rinkwebstudio.com

# Redis (Optional - if you want to use Redis for caching/sessions)
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS (if using S3 for file storage)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_DEFAULT_REGION=us-east-1
# AWS_BUCKET=
# AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher (if using real-time features)
# PUSHER_APP_ID=
# PUSHER_APP_KEY=
# PUSHER_APP_SECRET=
# PUSHER_HOST=
# PUSHER_PORT=443
# PUSHER_SCHEME=https
# PUSHER_APP_CLUSTER=mt1

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Security Settings
SANCTUM_STATEFUL_DOMAINS=admin.rinkwebstudio.com

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Performance Settings
OPCACHE_ENABLE=1
OPCACHE_MEMORY_CONSUMPTION=128
OPCACHE_MAX_ACCELERATED_FILES=4000

# Custom Application Settings
APP_TIMEZONE=Asia/Jakarta
APP_LOCALE=id
APP_FALLBACK_LOCALE=en

# File Upload Settings
MAX_UPLOAD_SIZE=10240
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# API Settings
API_RATE_LIMIT=60
API_THROTTLE_REQUESTS=1000
API_THROTTLE_MINUTES=1

# Frontend URL (for CORS and redirects)
FRONTEND_URL=https://rinkwebstudio.com

# Admin Settings
ADMIN_EMAIL=admin@rinkwebstudio.com
ADMIN_NAME="RinkWeb Administrator"

# Backup Settings (if using backup package)
BACKUP_DISK=local
BACKUP_NOTIFICATION_EMAIL=admin@rinkwebstudio.com