# Production Environment Configuration for Frontend
# This configuration connects to your self-hosted backend server
# Copy this to .env.production when deploying to Vercel

# Application Configuration
VITE_APP_NAME="RinkWeb Studio"
VITE_APP_ENV=production
VITE_APP_URL=https://rinkwebstudio.com

# Backend API Configuration
# Point to your self-hosted Laravel backend
VITE_API_BASE_URL=https://admin.rinkwebstudio.com
VITE_API_URL=https://admin.rinkwebstudio.com/api
VITE_BACKEND_URL=https://admin.rinkwebstudio.com

# Authentication Configuration
VITE_AUTH_GUARD=web
VITE_AUTH_REDIRECT_URL=https://rinkwebstudio.com/dashboard
VITE_LOGIN_URL=https://admin.rinkwebstudio.com/login
VITE_LOGOUT_URL=https://admin.rinkwebstudio.com/logout

# CORS Configuration
VITE_CORS_ORIGIN=https://rinkwebstudio.com
VITE_SANCTUM_STATEFUL_DOMAINS=rinkwebstudio.com,admin.rinkwebstudio.com

# Analytics Configuration
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX
VITE_FACEBOOK_PIXEL_ID=
VITE_HOTJAR_ID=

# SEO Configuration
VITE_APP_DESCRIPTION="RinkWeb Studio - Professional Web Development Services"
VITE_APP_KEYWORDS="web development, design, rinkweb, studio, professional"
VITE_APP_AUTHOR="RinkWeb Studio"
VITE_APP_IMAGE=https://rinkwebstudio.com/og-image.jpg

# Social Media Links
VITE_SOCIAL_FACEBOOK=https://facebook.com/rinkwebstudio
VITE_SOCIAL_INSTAGRAM=https://instagram.com/rinkwebstudio
VITE_SOCIAL_TWITTER=https://twitter.com/rinkwebstudio
VITE_SOCIAL_LINKEDIN=https://linkedin.com/company/rinkwebstudio
VITE_SOCIAL_YOUTUBE=https://youtube.com/@rinkwebstudio
VITE_SOCIAL_TIKTOK=https://tiktok.com/@rinkwebstudio

# Contact Information
VITE_CONTACT_EMAIL=hello@rinkwebstudio.com
VITE_CONTACT_PHONE=+62-xxx-xxxx-xxxx
VITE_CONTACT_ADDRESS="Jakarta, Indonesia"
VITE_CONTACT_WHATSAPP=+62xxxxxxxxxx

# Business Information
VITE_COMPANY_NAME="RinkWeb Studio"
VITE_COMPANY_TAGLINE="Professional Web Development Services"
VITE_COMPANY_FOUNDED=2024

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_CHAT_WIDGET=true
VITE_ENABLE_NEWSLETTER=true
VITE_ENABLE_BLOG=true
VITE_ENABLE_PORTFOLIO=true
VITE_ENABLE_TESTIMONIALS=true

# Third-party Services
VITE_RECAPTCHA_SITE_KEY=
VITE_STRIPE_PUBLISHABLE_KEY=
VITE_PAYPAL_CLIENT_ID=

# CDN Configuration
VITE_CDN_URL=https://cdn.rinkwebstudio.com
VITE_ASSETS_URL=https://rinkwebstudio.com

# Performance Configuration
VITE_ENABLE_PWA=true
VITE_ENABLE_SERVICE_WORKER=true
VITE_CACHE_VERSION=1.0.0

# Development/Debug (set to false in production)
VITE_DEBUG=false
VITE_SHOW_DEVTOOLS=false

# API Rate Limiting
VITE_API_RATE_LIMIT=100
VITE_API_TIMEOUT=30000

# Localization
VITE_DEFAULT_LOCALE=id
VITE_AVAILABLE_LOCALES=id,en
VITE_TIMEZONE=Asia/Jakarta

# Cookie Configuration
VITE_COOKIE_DOMAIN=.rinkwebstudio.com
VITE_COOKIE_SECURE=true
VITE_COOKIE_SAME_SITE=lax

# Security Headers
VITE_CSP_ENABLED=true
VITE_HSTS_ENABLED=true

# Monitoring & Error Tracking
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=production
VITE_SENTRY_RELEASE=1.0.0

# Newsletter/Email Marketing
VITE_MAILCHIMP_API_KEY=
VITE_MAILCHIMP_LIST_ID=

# Chat/Support Widget
VITE_INTERCOM_APP_ID=
VITE_ZENDESK_KEY=
VITE_CRISP_WEBSITE_ID=

# Map Configuration
VITE_GOOGLE_MAPS_API_KEY=
VITE_MAPBOX_ACCESS_TOKEN=

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Theme Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true

# Build Configuration
VITE_BUILD_VERSION=1.0.0
VITE_BUILD_DATE=2024-01-20

# Maintenance Mode
VITE_MAINTENANCE_MODE=false
VITE_MAINTENANCE_MESSAGE="We are currently performing scheduled maintenance. Please check back soon."

# Custom Domain Configuration
VITE_CUSTOM_DOMAIN=rinkwebstudio.com
VITE_WWW_REDIRECT=true